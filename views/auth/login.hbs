<div class="auth">

    <!--    content-->
    <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Войти</a></li>
        <li class="tab col s6"><a href="#register">Регистрация</a></li>
      </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h3>Войти в магазин</h3>
        <!-- Login -->
        <form action="/auth/login" method="post">
            <!--    user_name (email)    -->
            <div class="input-field">
                  <input id="email" name="email" type="email" class="validate" required>
                  <label for="email">Email</label>
                  <span class="helper-text" data-error="Введите e-mail" data-success="OK"></span>
            </div>
            <!-- Password -->
            <div class="input-field">
                  <input id="password" name="password" type="password" class="validate" required>
                  <label for="password">Пароль</label>
                <span class="helper-text" data-error="Введите пароль" data-success="OK"></span>
            </div>

            <!--  req.csrfToken() вставит в value `token,
            который будет назначен res.locals.csrf в  variables.js  -->
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn btn-primary" type="submit">Войти</button>

        </form>

    </div>
    <div id="register" class="col s6 offset-s3">
        <h3>Создать аккаунт</h3>
        <!-- Registration -->
        <form action="/auth/register" method="post">
            <!--   reg name     -->
            <div class="input-field">
                  <input id="name" name="name" type="text" class="validate" required>
                  <label for="name">Выше имя</label>
                  <span class="helper-text" data-error="Введите имя" data-success="OK"></span>
            </div>

            <!--   reg email     -->
            <div class="input-field">
                  <input id="remail" name="email" type="email" class="validate" required>
                  <label for="remail">Email</label>
                  <span class="helper-text" data-error="Введите e-mail" data-success="OK"></span>
            </div>

            <!-- Password -->
            <div class="input-field">
                  <input id="rpassword" name="password" type="password" class="validate" required>
                  <label for="rpassword">Пароль</label>
                <span class="helper-text" data-error="Введите пароль" data-success="OK"></span>
            </div>

            <!-- Confirm Password -->
            <div class="input-field">
                  <input id="confirm" name="confirm" type="password" class="validate" required>
                  <label for="confirm">Пароль еще раз</label>
                <span class="helper-text" data-error="Введите пароль еще раз" data-success="OK"></span>
            </div>

            <!--
            req.csrfToken() вставит в value `token,
            который будет назначен res.locals.csrf в  variables.js
            -->
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button class="btn btn-primary" type="submit">Зарегистрироваться</button>

        </form>
    </div>
 </div>

</div>
