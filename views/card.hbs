<h1>Корзина</h1>
<div id="card">
    {{#if courses }}
    <table>
        <thead>
            <tr>
                <td>Название курса</td>
                <td>Количество</td>
                <td>действие</td>
            </tr>
        </thead>
        <tbody>

            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Удалить</button>
                    </td>
                </tr>
            {{/each}}

        </tbody>
    </table>

    <p>
        <strong>
            Цена:
        </strong>
        <span class="price">
            {{price}}
        </span>
    </p>

        <form action="/orders" method="post">

            <!--
            req.csrfToken() вставит в value `token,
            который будет назначен res.locals.csrf в  variables.js
            -->
            <input type="hidden" name="_csrf" value="{{csrf}}">

            <button type="submit" class="btn">Сделать заказ</button>
        </form>
{{else}}
    <p>Корзина пуста</p>
{{/if}}
</div>
