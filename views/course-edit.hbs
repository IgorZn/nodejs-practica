<h2>Редактировать {{course.title}}</h2>

<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field">
          <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
          <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название" data-success="OK">Введите название</span>
    </div>

    <div class="input-field">
          <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
          <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену" data-success="OK">Введите цену</span>
    </div>

    <div class="input-field">
          <input id="img" name="img" type="text" class="validate" required value="{{course.img}}">
          <label for="img">URL курса</label>
        <span class="helper-text" data-error="Введите URL картинки" data-success="OK">Введите URL картинки</span>
    </div>

    <!--
    req.csrfToken() вставит в value `token,
    который будет назначен res.locals.csrf в variables.js
    -->
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <input type="hidden" name="id" value="{{course._id}}">

    <button class="btn btn-primary" type="submit">Редактировать курс</button>
</form>

<form action="/courses/remove" method="post">
     <!--
    req.csrfToken() вставит в value `token,
    который будет назначен res.locals.csrf в variables.js
       -->
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course._id}}">
    <button class="btn red">Удалить курс</button>
</form>