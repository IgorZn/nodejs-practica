<h1>Мои заказы</h1>

{{#if orders.lengh}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ <small>{{_id}}</small>
                        </span>
                        <p>{{date}}</p>
                        <p><em>{{user.userID.name}}</em>{{user.userID.email}}</p>
                        <ol>
                            {{#each}}
                            <li>
                                {{coutse.title}} (x <strong>{{count}}</strong>)
                            </li>
                            {{/each}}
                        </ol>

                        <hr>
                        <p>Цена: <span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Заказов пока нет {{orders}}</p>
{{/if}}