<h1>Профиль</h1>

<div class="row">
    <div class="col s6">
        <div class="card">
            <div class="card-image">
                {{#if user.avatarURL}}
                    <img src="{{user.avatarURL}}" alt="{{user.name}}">
                {{else}}
                    <img src="https://124ural.ru/wp-content/uploads/2017/04/no-avatar.png" alt="Default avatar">
                {{/if}}
                <div class="card-panel teal">
                    <p class="white-text">{{user.name}}</p>
                </div>
            </div>
            <div class="card-content">
                <form action="/profile/?_csrf={{csrf}}" method="post" enctype="multipart/form-data">
                    <p>Ваш e-mail: {{user.email}}</p>
                    <p>. . . . . . . . . . . . . .</p>
                    <div class="input-field">
                        <input id="name" name="name" type="text" class="validate" required value="{{user.name}}">
                        <label for="name">Имя</label>
                        <span class="helper-text" data-error="Имя не может быть пустым"></span>

                        <div class="file-field input-field">
                            <div class="btn">
                                <span>File</span>
                                <input type="file" name="avatar">
                            </div>
                            <div class="file-path-wrapper">
                                <input class="file-path validate" type="text" name="file">
                                <label for="file">Укажие путь до файла</label>
                            </div>
                        </div>

                        <!--
                        req.csrfToken() вставит в value `token,
                        который будет назначен res.locals.csrf в  variables.js
                        -->
<!--                        <input type="hidden" name="_csrf" id="_csrf" value="{{csrf}}">-->
                        <button class="btn btn-primary">Изменить</button>

                    </div>
                </form>
            </div>

        </div>
    </div>